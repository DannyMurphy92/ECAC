@using System.Collections.Specialized
@using Website.Infrastructure;
@using Website.Extensions;



<div class="sidebar-menu">
    <ul class="unstyled-list spaced-list">
        <li>
            <a href="@Url.Action("Index", "Home")">Home</a>
        </li>
        <li>
            <span data-toggle="collapse" data-target=".refrigeList" class="collapsed collapse-toggle sidebar-collapselist">Refrigeration Training </span>
            <ul class="unstyled-list collapse collapseList pad-0 refrigeList" data-trainingtypeId="@((int) @TrainingType.Refrigeration)">
                @foreach (Refrigeration course in Enum.GetValues(typeof(Refrigeration)))
                {
                    <li data-courseId="@((int) course)">
                        <a href="@Url.Action("Course", "Training", new {typeId = (int) TrainingType.Refrigeration, courseId = (int) course})">@EnumExtensions.GetDisplayName(course)</a>
                    </li>
                }
            </ul>
        </li>

        <li>
            <span data-toggle="collapse" data-target=".hvacList" class="collapsed collapse-toggle sidebar-collapselist">HVAC Training </span>
            <ul class="unstyled-list collapse collapseList pad-0 hvacList" data-trainingtypeId="@((int) @TrainingType.HVAC)">
                @foreach (HVAC course in Enum.GetValues(typeof(HVAC)))
                {
                    <li data-courseId="@((int) course)">
                        <a href="@Url.Action("Course", "Training", new {typeId = (int) TrainingType.HVAC, courseId = (int) course})">@EnumExtensions.GetDisplayName(course)</a>
                    </li>
                }
            </ul>
        </li>

        <li>
            <span data-toggle="collapse" data-target=".fgasList" class="collapsed collapse-toggle sidebar-collapselist">F Gas Training </span>
            <ul class="unstyled-list collapse collapseList pad-0 fgasList" data-trainingtypeId="@((int) @TrainingType.FGas)">
                @foreach (FGas course in Enum.GetValues(typeof(FGas)))
                {
                    <li data-courseId="@((int) course)">
                        <a href="@Url.Action("Course", "Training", new {typeId = (int) TrainingType.FGas, courseId = (int) course})">@EnumExtensions.GetDisplayName(course)</a>
                    </li>
                }
            </ul>
        </li>
        @foreach (Service course in Enum.GetValues(typeof(Service)))
            {
            <li data-serviceId="@((int) course)">
                <a href="@Url.Action("Service", "Training", new {id = (int)course})">@EnumExtensions.GetDisplayName(course)</a>
            </li>
        }
        <li>
            <a href="@Url.Action("About", "Home")">About Us</a>
        </li>
    </ul>
</div>

